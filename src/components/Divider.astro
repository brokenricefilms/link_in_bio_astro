---
export interface Props {
  noPadding?: boolean;
  ariaHidden?: boolean;
}

const { noPadding = false, ariaHidden = true } = Astro.props;
---

<div class={`max-w-3xl mx-auto ${noPadding ? "px-0" : "pt-1"}`}>
  <hr class="gradient-line" aria-hidden={ariaHidden} />
</div>

<style>
  .gradient-line {
    margin: 0 0 10px 0;
    display: block;
    border: none;
    height: 1px;
    width: 100%;
    background: #ffffff;
    background: linear-gradient(to right, #eeeeee, #000000, #000000, #000000, #eeeeee);
  }
</style>
