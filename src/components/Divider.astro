---
export interface Props {
  noPadding?: boolean;
  ariaHidden?: boolean;
}

const { noPadding = false, ariaHidden = true } = Astro.props;
---

<div class={`max-w-3xl mx-auto ${noPadding ? "px-0" : "pt-1"}`}>
  <hr class="gradient-line" aria-hidden={ariaHidden} />
</div>

<style>
  .gradient-line {
    margin: 0 0 10px 0;
    display: block;
    border: none;
    height: 1px;
    width: 100%;
    background: hsl(197deg 53% 34%);
    background: linear-gradient(to right, hsl(35deg 100% 98%), hsl(343deg 35% 55%), hsl(35deg 81% 56%), hsl(3deg 53% 67%), hsl(35deg 100% 98%));
  }
</style>

